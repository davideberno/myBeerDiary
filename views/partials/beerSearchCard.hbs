<div class="card mb-3">
  <h3 class="card-header"><a href="/beer/{{_id}}">{{fields.name}}</a> </h3>
  <div class="card-body">
    <h5 class="card-title">Brewery: {{fields.name_breweries}}</h5>
  </div>
  {{#if fields.image}}
  <img src="{{fields.image}}" style="height: 200px; width: 100px;" alt="image of the beer">
  {{/if}}
</div>